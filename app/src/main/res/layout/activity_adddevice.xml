<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDeviceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addDeviceIDET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" android:hint=" Enter Device ID"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addDeviceOwenerNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" android:hint=" Enter Owner Name"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/modeAddDeviceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Mode :-"
                    android:textStyle="bold"

                    />
                <Spinner
                    android:id="@+id/modeAddDeviceSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Frequency"
                    android:textStyle="bold"/>
                <RadioGroup
                    android:id="@+id/addDevicefrequencyRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <RadioButton
                        android:id="@+id/addDeviceRB11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T1"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/addDeviceRB12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T2"/>
                    <RadioButton
                        android:id="@+id/addDeviceRB13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T3"/>
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ear"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/addDeviceearRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"

                    >
                    <RadioButton
                        android:id="@+id/addDeviceRB21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Left"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/addDeviceRB22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Right"/>
                    <RadioButton
                        android:id="@+id/addDeviceRB23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Both"/>
                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addDeviceSoundET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" android:hint=" Enter Sound"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addDevicevolumeET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" android:hint=" Enter Volume"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Session :-"
                    android:textStyle="bold"

                    />
                <Spinner
                    android:id="@+id/addDeviceSessionET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:layout_margin="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Mode"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/addDevicemodeRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"

                    >
                    <RadioButton
                        android:id="@+id/addDeviceRB31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diagnosis"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/addDeviceRB32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Therapy"/>
                </RadioGroup>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Timer :-"
                    android:textStyle="bold"

                    />
                <Spinner
                    android:id="@+id/addDeviceTimerET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/addDeviceconnectBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add device"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"

            />
    </LinearLayout>

</ScrollView>